<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BookingAdapter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/third"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp">

        <!-- Event Image -->
        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop" />

        <!-- Event Name -->
        <TextView
            android:id="@+id/txtEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textSize="20sp"
            android:textColor="@color/Accent2"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Event Category -->
        <TextView
            android:id="@+id/txtEventCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Category"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <!-- Event Price -->
        <TextView
            android:id="@+id/txtEventPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Price"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <!-- Booking Date -->
        <TextView
            android:id="@+id/txtBookingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Date"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <!-- Booking Price -->
        <TextView
            android:id="@+id/txtBookingPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Price"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <!-- Booking Slot -->
        <TextView
            android:id="@+id/txtBookingSlot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Slot"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
